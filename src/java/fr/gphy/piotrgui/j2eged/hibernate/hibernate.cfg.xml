<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/J2EGED?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping resource="fr/gphy/piotrgui/j2eged/model/Document.hbm.xml"/>
    <mapping resource="fr/gphy/piotrgui/j2eged/model/Metadata.hbm.xml"/>
    <mapping resource="fr/gphy/piotrgui/j2eged/model/User.hbm.xml"/>
    <mapping resource="fr/gphy/piotrgui/j2eged/model/Role.hbm.xml"/>
    <mapping resource="fr/gphy/piotrgui/j2eged/model/Type.hbm.xml"/>
    <mapping resource="fr/gphy/piotrgui/j2eged/model/Folder.hbm.xml"/>
    <mapping resource="fr/gphy/piotrgui/j2eged/model/Version.hbm.xml"/>
    <mapping resource="fr/gphy/piotrgui/j2eged/model/PhysicalDocument.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
